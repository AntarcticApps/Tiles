{
  "name": "__MSG_extension_name__",
  "version": "3.0.0",
  "manifest_version": 2,
  "description": "__MSG_extension_description__",
  "default_locale": "en",
  "minimum_chrome_version": "23.0.0.0",

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "permissions": [
    "tabs",
    "storage",
    "contextMenus",
    "<all_urls>",
    "unlimitedStorage",
    "notifications",
    "bookmarks"
  ],

  "icons": {
    "16": "static/images/icon-bitty.png",
    "48": "static/images/icon-small.png",
    "128": "static/images/icon-large.png"
  },

  "chrome_url_overrides": {
    "newtab": "index.html"
  },

  "background": {
    "page": "background.html"
  }
}
