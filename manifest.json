{
  "name": "Tiles",
  "version": "1.0",
  "manifest_version": 2,
  "description": "A tiled new tab page.",
  "options_page": "options/options.html",
  "default_locale": "en",

  "permissions": [
    "history",
    "tabs",
    "storage",
    "contextMenus",
    "<all_urls>"
  ],

  "icons": {
    "16": "icons/icon-bitty.png",
    "48": "icons/icon-small.png",
    "128": "icons/icon-large.png"
  },

  "chrome_url_overrides": {
    "newtab": "tab_page/tiles.html"
  },

  "browser_action": {
    "default_icon": "icons/icon-bitty-gray.png",
    "default_title": "Tiles"
  },

  "background": {
    "scripts": ["shared/js/sites.js", "browserAction/js/background.js"]
  },

  "web_accessible_resources": [
    "tab_page/tiles.html",
    "tab_page/css/style.css",
    "tab_page/js/main.js",
    "shared/js/sites.js",
    "shared/js/utilities.js"
  ]
}