{
  "name": "Tiles",
  "version": "1.0",
  "manifest_version": 2,
  "description": "A tiled new tab page.",
  "options_page": "options/options.html",

  "permissions": [
    "history",
    "tabs",
    "storage",
    "contextMenus",
    "<all_urls>"
  ],

  "icons": {
    "16": "icons/icon-bitty.png",
    "48": "icons/icon-small.png",
    "128": "icons/icon-large.png"
  },

  "chrome_url_overrides": {
    "newtab": "tab_page/tiles.html"
  },

  "browser_action": {
    "default_icon": "icons/icon-bitty-gray.png",
    "default_title": "Tiles",
    "default_popup": "browserAction/popup.html"
  },

  "background": {
    "scripts": ["browserAction/background.js"]
  }
}