{
  "name": "__MSG_extension_name__",
  "version": "2.0.0",
  "manifest_version": 2,
  "description": "__MSG_extension_description__",
  "options_page": "options/options.html",
  "default_locale": "en",
  "minimum_chrome_version": "21.0.0.0",

  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'; style-src 'self' data: chrome-extension: filesystem: 'unsafe-inline';",

  "permissions": [
    "tabs",
    "storage",
    "contextMenus",
    "<all_urls>",
    "unlimitedStorage"
  ],

  "icons": {
    "16": "icons/icon-bitty.png",
    "48": "icons/icon-small.png",
    "128": "icons/icon-large.png"
  },

  "chrome_url_overrides": {
    "newtab": "tab_page/tiles.html"
  },

  "browser_action": {
    "default_icon": "icons/icon-bitty-gray.png",
    "default_title": "Tiles"
  },

  "background": {
    "page": "background.html"
  },

  "web_accessible_resources": [
    "tab_page/tiles.html",
    "tab_page/css/style.css",
    "tab_page/js/main.js",
    "shared/js/colors.js",
    "shared/js/files.js",
    "shared/js/messaging.js",
    "shared/js/storage.js",
    "shared/js/googleAnalytics.js",
    "shared/js/sites.js",
    "shared/js/utilities.js",
    "options/options.html",
    "options/css/style.css",
    "options/js/main.js",
    "persistent/user.css"
  ]
}